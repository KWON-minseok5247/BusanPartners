<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#FFFFFFFF"
        android:paddingVertical="18dp"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/back_figma"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/headerTitle"
            android:textColor="#1C160C"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/header_title_terms" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="0dp"
            android:visibility="invisible" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/terms_of_service_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_service_date"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/terms_of_service_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_service_intro"
                android:textColor="#000000"
                android:textSize="14sp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/terms_of_service_1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_service_1_title"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/terms_of_service_1_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_service_1_content"
                android:textColor="#000000"
                android:textSize="14sp"
