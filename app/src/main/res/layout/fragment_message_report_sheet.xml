<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="차단 사유를 선택해주세요."
        android:textSize="19sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/reason_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/reason_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="12dp"
            android:buttonTint="#009963"
            android:text="욕설 또는 공격적인 언어"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/reason_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"

            android:buttonTint="#009963"
            android:text="성희롱 또는 성적인 불쾌감"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/reason_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="12dp"
            android:buttonTint="#009963"
            android:text="스팸 또는 광고"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/reason_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"

            android:buttonTint="#009963"
            android:text="부적절한 콘텐츠 공유"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/reason_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:buttonTint="#009963"

            android:text="개인정보 요구 또는 공유"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/reason_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:buttonTint="#009963"

            android:text="기타"
            android:textSize="16sp" />

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/report_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/report_button"
        android:text="신고 후 차단하기"
        android:textColor="@android:color/white" />

</LinearLayout>
