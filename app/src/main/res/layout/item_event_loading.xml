<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <View
        android:id="@+id/iv_festival_image"
        app:shapeAppearanceOverlay="@style/cr12"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:background="@drawable/shape_shimmer"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY" />

    <View
        android:id="@+id/tv_festival_title"
        android:layout_width="240dp"
        android:layout_height="16dp"
        android:text="San Francisco Art Festival"
        android:textStyle="bold"
        android:background="@drawable/shape_shimmer"

        android:textSize="16sp"
        android:textColor="#161411"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <View
        android:id="@+id/tv_festival_location"
        android:layout_width="240dp"
        android:layout_height="14dp"
        android:background="@drawable/shape_shimmer"
        android:text="Mission District, San Francisco Â· 2.0mi"
        android:textSize="14sp"
        android:textColor="#897560" />

</LinearLayout>
