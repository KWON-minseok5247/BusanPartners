<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="#FFFFFFFF"
      android:fillViewport="true"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <View
          android:id="@+id/busan_image"
          android:layout_width="0dp"
          android:layout_height="120dp"
          android:layout_marginBottom="25dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/app_logo_image"
          android:layout_width="wrap_content"
          android:src="@drawable/logo_white_background_resize"
          android:layout_height="170dp"
          android:layout_marginTop="25dp"
          app:layout_constraintTop_toBottomOf="@id/busan_image"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>


      <TextView
          android:id="@+id/r3b7o5cqlh3e"
          android:textColor="#1C160C"
          android:textSize="16sp"
          android:layout_marginHorizontal="39dp"
          android:layout_width="0dp"
          android:layout_marginTop="26dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/login_title"
          app:layout_constraintTop_toBottomOf="@id/app_logo_image"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/googleLoginButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:layout_marginTop="26dp"
          android:background="@drawable/cr24bff009963"
          android:gravity="center"

          android:paddingVertical="1dp"
          android:text="@string/google_login_btn"
          android:textColor="#FFFFFF"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/r3b7o5cqlh3e" />

      <TextView
          android:id="@+id/agree_personal_information"
          android:textColor="#A08249"
          android:textSize="14sp"
          android:layout_marginTop="7dp"
          android:layout_marginHorizontal="25dp"
          android:gravity="center"

          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="@string/agree_personal_information"
          app:layout_constraintTop_toBottomOf="@id/googleLoginButton"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

      <LinearLayout
          android:id="@+id/rmaq6qaywo7n"
          android:layout_width="0dp"
          android:layout_height="20dp"
          android:background="#FFFFFFFF"
          android:orientation="vertical"
          app:layout_constraintTop_toBottomOf="@id/agree_personal_information"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>



