<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rqnlm1o3y5r"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rj7m4it3pwp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#FFFFFFFF"
                android:paddingVertical="28dp"
                android:paddingHorizontal="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/back_figma"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/rk3nhpswmkf"
                    android:textColor="#1C160C"
                    android:textSize="18sp"
                    android:fontFamily="@font/stream_roboto_bold"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="이미지 첨부" />

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="0dp"
                    android:visibility="invisible" />
            </LinearLayout>


            <TextView
                android:id="@+id/rsz8p47hpfk"
                android:textColor="#1C160C"
                android:textSize="16sp"
                android:layout_marginBottom="38dp"
                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Choose a profile photo that shows your face clearly." />

            <RelativeLayout
                android:id="@+id/rlqonm7jwhcq_rl"
                android:layout_width="match_parent"
                android:layout_height="477dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="26dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    app:shapeAppearanceOverlay="@style/cr12"
                    android:layout_width="match_parent"
                    android:layout_height="464dp"
                    android:layout_marginHorizontal="16dp" />

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:ci_drawable="@drawable/jakarta_radius"
                    app:ci_drawable_unselected="@drawable/chipgroup_radius"
                    app:ci_height="8dp"
                    app:ci_width="8dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/open_gallery_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/cr24bff009964"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:textStyle="bold"
                    android:text="갤러리"
                    android:textColor="#1C170D"
                    android:textSize="14sp"
                    android:fontFamily="@font/stream_roboto_regular" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/send_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/cr24bff009963"
                    android:fontFamily="@font/stream_roboto_regular"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="전송하기"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rpk31unlygn"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#FFFFFFFF"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
